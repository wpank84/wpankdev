<main class="section">
    <h1 class="title">Welcome</h1>

    <% if logged_in? %>
        <h2 class="subtitle">You are Logged In, <%= current_user.username %></h2>
        <%= button_to "Logout", '/logout', method: :delete, class: 'button' %>
    <%end%>

    <% if !logged_in? %>
      <%= button_to "Login", '/login', method: :get, class: 'button'%>
    <% end %>


</main>
